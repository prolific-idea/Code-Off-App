<form action='j_spring_security_check.htm' method='POST'>
    <h2 class="form-signin-heading">Sign in</h2>
    <div class="form-group">
        <label for="emailInput">Username</label>
        <input id="emailInput" type="text" class="form-control" placeholder="Email address" name="j_username">
    </div>
    <div class="form-group">
        <label for="passwordInput">Password</label>
        <input id="passwordInput" type="password" class="form-control" placeholder="Password" name="j_password">
    </div>
    <button class="btn btn-large btn-primary" type="submit">Sign in</button>
</form>